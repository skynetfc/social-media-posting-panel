# Admin Configuration
ADMIN_PASSWORD=your_admin_password_here
SECRET_KEY=your_secret_key_here_change_this_in_production

# Database (Optional - defaults to SQLite)
DATABASE_URL=sqlite:///./dashboard.db

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Instagram Configuration (Business Account Required)
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_ACCOUNT_ID=your_instagram_business_account_id

# YouTube Configuration
YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_CHANNEL_ID=your_youtube_channel_id

# TikTok Business API Configuration
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token
TIKTOK_OPEN_ID=your_tiktok_open_id

# Optional: External file hosting (for Instagram media URLs)
FILE_HOSTING_URL=https://yourdomain.com

# Security Settings
SESSION_TIMEOUT=3600
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,mp4,mov,avi,mkv

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=dashboard.log

# Development Settings
DEBUG=False
TESTING=False
